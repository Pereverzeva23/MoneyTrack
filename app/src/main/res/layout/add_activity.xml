<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".AddActivity">

    <LinearLayout android:layout_width="500dp" android:layout_height="wrap_content">

        <Button
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="#F4F4F4"
            android:backgroundTint="#F4F4F4"
            android:foreground="?attr/homeAsUpIndicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="СОЗДАТЬ КОПИЛКУ"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>>
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Название"
        android:layout_marginBottom="16dp"
         />

    <EditText
        android:id="@+id/editTextGoal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Цель"
        android:layout_marginBottom="16dp"
        />

    <EditText
        android:id="@+id/editTextBalance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Начальный баланс"
        android:text="0"
        android:layout_marginBottom="24dp"
         />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="СОХРАНИТЬ"
        android:backgroundTint="#D1C4E9"
        android:textColor="#7B1FA2"
        android:layout_gravity="center" />
</LinearLayout>